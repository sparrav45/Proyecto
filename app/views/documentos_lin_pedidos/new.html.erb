<h1>New Documentos Lin Pedido</h1>

<%= form_with(model: @documentos_lin_pedido) do |form| %>
  <% if @documentos_lin_pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@documentos_lin_pedido.errors.count, "error") %> prohibited this documentos_lin_pedido from being saved:</h2>

      <ul>
        <% @documentos_lin_pedido.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <table>
   <thead>
     <tr>
       <th>codigo</th>
       <th>Descripcion</th>
       <th><%= I18n.l(Date.today - 6.month, format: '%B') %></th>
       <th><%= I18n.l(Date.today - 5.month, format: '%B') %></th>
       <th><%= I18n.l(Date.today - 4.month, format: '%B') %></th>
       <th><%= I18n.l(Date.today - 3.month, format: '%B') %></th>
       <th><%= I18n.l(Date.today - 2.month, format: '%B') %></th>
       <th><%= I18n.l(Date.today - 1.month, format: '%B') %></th>
       <th>Mes Actual</th>
       <th>Total_Rotacion</th>
       <th>Stock</th>
       <th>Costo_Unitario</th>
       <th>cantidad</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
   <% if !(@datos.blank?) %>
            <% @datos.each do |dato| %>
                <tr>
                         <td><%= form.text_field :codigo, :size=>"8", :value =>(dato[:a]) %></td>
                         <td><%= form.text_area :descripcion, :size=>"30", :value =>(dato[:b]) %></td>
                         <td><%= label_tag  :mes1, dato[:c] %></td>
                         <td><%= label_tag  :mes2, dato[:d] %></td>
                         <td><%= label_tag  :mes3, dato[:e] %></td>
                         <td><%= label_tag  :mes4, dato[:f] %></td>
                         <td><%= label_tag  :mes5, dato[:g] %></td>
                         <td><%= label_tag  :mes6, dato[:h] %></td>
                         <td><%= label_tag  :mes_actual, dato[:i]%></td>
                         <td><%= label_tag  :total_rotacion, dato[:j] %></td>
                         <td><%= label_tag  :stock, dato[:k]%></td>
                         <td><%= form.text_field :costo_unitario, :size=>"4", :value =>(dato[:l])  %></td>
                         <td><%= form.number_field :cantidad, :size=>"4", :value =>"10"  %></td>                        
                 </tr>
          <% end %>
           <% end %>

      </tbody>

    </table>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', documentos_lin_pedidos_path %>
